---
import MainLayout from '../layouts/MainLayout.astro';
import { tracks } from '../lib/tracks';
---

<MainLayout
  title="Visão Geral"
  description="Visão geral da estrutura de conteúdo — fundamentos, backend, frontend, plataforma, arquitetura, IA e carreira."
>
  <div class="mx-auto max-w-4xl px-4 py-12 sm:px-6">
    <div class="mb-12">
      <h1 class="mb-3 text-3xl font-bold tracking-tight sm:text-4xl">Visão Geral</h1>
      <p class="max-w-lg text-sm text-[var(--color-text-muted)]">
        Estrutura do conteúdo organizada em módulos progressivos. Cada módulo constrói sobre o conhecimento do anterior.
      </p>
    </div>

    <div class="space-y-6">
      {
        [
          {
            n: 1,
            title: 'Fundamentos de Ciência da Computação',
            description:
              'Fundamentos matemáticos, complexidade algorítmica, estruturas de dados, algoritmos clássicos, redes TCP/IP e sistemas operacionais.',
            tracks: [tracks[0]],
            topics: [
              'Lógica, combinatória, logaritmos e Master Theorem',
              'Estruturas de dados (arrays, listas, hash tables, árvores, grafos)',
              'Algoritmos de busca e ordenação, recursão e programação dinâmica',
              'Sistemas operacionais (eBPF, io_uring), compiladores e redes (HTTP/3, QUIC)',
              'Sistemas distribuídos (Raft, CRDTs), concorrência avançada e database internals',
            ],
          },
          {
            n: 2,
            title: 'Backend & Frontend',
            description:
              'Desenvolvimento de aplicações completas. Backend com Node.js internals, Go, Java, SQL/NoSQL, APIs. Frontend com CSS, JavaScript core, React e Next.js.',
            tracks: [tracks[1], tracks[2]],
            topics: [
              'Event loop, streams, Go, Java e Rust essencial',
              'SQL, PostgreSQL internals, índices, transações e NoSQL',
              'REST, gRPC/tRPC, GraphQL, Kafka, serverless e API design avançado',
              'JavaScript core, TypeScript avançado, CSS moderno, React Compiler/RSC',
              'Web Components, micro-frontends, acessibilidade WCAG e performance web',
            ],
          },
          {
            n: 3,
            title: 'Plataforma & Arquitetura',
            description: 'Infraestrutura de produção e design de sistemas. Docker, Kubernetes, AWS, sistemas distribuídos e reliability engineering.',
            tracks: [tracks[3], tracks[4]],
            topics: [
              'Docker, Kubernetes, Terraform e CI/CD',
              'AWS, observabilidade e segurança de infraestrutura',
              'Edge computing, Cloudflare Workers e WebAssembly',
              'SOLID, design patterns, system design e hexagonal architecture',
              'Sistemas distribuídos, CAP theorem, consensus e microsserviços',
            ],
          },
          {
            n: 4,
            title: 'Inteligência Artificial',
            description: 'Fundamentos de IA, redes neurais, deep learning, LLMs, agentes de IA e prompt engineering.',
            tracks: [tracks[5]],
            topics: [
              'Fundamentos de IA e matemática essencial',
              'Redes neurais, deep learning e Transformers',
              'LLMs, tokenização, fine-tuning e RLHF',
              'Agentes de IA e prompt engineering',
              'AI para devs: RAG, embeddings, MCP, LLMs em produção',
            ],
          },
          {
            n: 5,
            title: 'Carreira',
            description:
              'Documentação técnica, leitura de código, entrevistas técnicas e inglês técnico.',
            tracks: [tracks[6]],
            topics: [
              'Documentação técnica (ADRs, RFCs)',
              'Leitura e navegação de código legado',
              'Entrevistas de coding',
              'Entrevistas de system design',
              'Inglês técnico profissional',
            ],
          },
        ].map((item) => (
          <div class="rounded-lg border border-[var(--color-border)] bg-[var(--color-bg-alt)] p-6">
            <div class="mb-3 flex items-center gap-3">
              <span class="font-mono text-xs text-[var(--color-text-muted)]">{String(item.n).padStart(2, '0')}</span>
              <h2 class="text-lg font-bold">{item.title}</h2>
            </div>

            <p class="mb-4 text-sm text-[var(--color-text-muted)]">{item.description}</p>

            <div class="mb-4 grid grid-cols-1 gap-1.5 sm:grid-cols-2">
              {item.topics.map((topic) => (
                <div class="flex items-center gap-2 text-xs text-[var(--color-text-muted)]">
                  <span class="h-1 w-1 shrink-0 rounded-full bg-[var(--color-border)]" />
                  {topic}
                </div>
              ))}
            </div>

            <div class="flex gap-2">
              {item.tracks.map((track) => (
                <a
                  href={`/trilha/${track.id}`}
                  class="inline-flex items-center gap-1.5 rounded border border-[var(--color-border)] px-2.5 py-1 text-xs transition-colors hover:border-[var(--color-text-muted)]"
                >
                  <span class="h-1.5 w-1.5 rounded-full" style={`background-color: ${track.color}`} />
                  {track.shortTitle}
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</MainLayout>
