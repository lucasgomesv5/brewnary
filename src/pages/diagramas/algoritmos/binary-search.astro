---
import MainLayout from '../../../layouts/MainLayout.astro';
import BinarySearchVisualizer from '../../../components/react/algorithms/searching/BinarySearchVisualizer';
---

<MainLayout title="Binary Search" description="Visualizador animado do algoritmo Binary Search passo a passo.">
  <div class="mx-auto max-w-3xl px-4 py-8 sm:px-6">
    <div class="mb-6">
      <a href="/diagramas" class="text-sm text-(--color-text-muted) transition-colors hover:text-(--color-text)"
        >← Voltar aos diagramas</a
      >
    </div>
    <div class="mb-6 rounded-lg border border-[var(--color-border)] bg-[var(--color-bg-alt)] px-4 py-3 text-sm text-[var(--color-text-muted)]">
      Este visualizador também está disponível na <a href="/dsa" class="font-medium text-[var(--color-text)] underline">página de DSA</a> com todos os 19 algoritmos interativos.
    </div>
    <BinarySearchVisualizer client:visible />
  </div>
</MainLayout>
