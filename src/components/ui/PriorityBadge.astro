---
import Icon from './Icon.astro';

interface Props {
  level: 'high' | 'medium' | 'low';
}

const { level } = Astro.props;

const config = {
  high: {
    icon: 'circle-dot',
    label: 'Essencial',
    bg: 'bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300',
  },
  medium: {
    icon: 'circle',
    label: 'Importante',
    bg: 'bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-300',
  },
  low: {
    icon: 'circle-check',
    label: 'Complementar',
    bg: 'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300',
  },
};

const c = config[level];
---

<span class={`inline-flex items-center gap-1 px-2 py-0.5 rounded-[var(--radius-badge)] text-xs font-medium ${c.bg}`}>
  <Icon name={c.icon} size={12} />
  {c.label}
</span>
