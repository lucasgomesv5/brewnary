---
interface Props {
  prevLesson?: { slug: string; title: string } | null;
  nextLesson?: { slug: string; title: string } | null;
  track: string;
}

const { prevLesson, nextLesson, track } = Astro.props;
---

{
  (prevLesson || nextLesson) && (
    <nav class="mt-12 flex items-stretch justify-between gap-4 border-t border-[var(--color-border)] pt-8">
      {prevLesson ? (
        <a
          href={`/trilha/${track}/${prevLesson.slug}`}
          class="group flex flex-1 flex-col rounded-xl border border-[var(--color-border)] p-4 transition-colors hover:border-[var(--color-text-muted)]"
        >
          <span class="mb-1 flex items-center gap-1 text-xs text-[var(--color-text-muted)]">
            <svg
              class="h-3 w-3"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="m12 19-7-7 7-7" />
              <path d="M19 12H5" />
            </svg>
            Anterior
          </span>
          <span class="text-sm font-medium">{prevLesson.title}</span>
        </a>
      ) : (
        <div class="flex-1" />
      )}

      {nextLesson ? (
        <a
          href={`/trilha/${track}/${nextLesson.slug}`}
          class="group flex flex-1 flex-col items-end rounded-xl border border-[var(--color-border)] p-4 text-right transition-colors hover:border-[var(--color-text-muted)]"
        >
          <span class="mb-1 flex items-center gap-1 text-xs text-[var(--color-text-muted)]">
            Pr√≥xima
            <svg
              class="h-3 w-3"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M5 12h14" />
              <path d="m12 5 7 7-7 7" />
            </svg>
          </span>
          <span class="text-sm font-medium">{nextLesson.title}</span>
        </a>
      ) : (
        <div class="flex-1" />
      )}
    </nav>
  )
}
